#!/bin/sh

case $1 in
    1) echo "ok nvidia" 
        sudo modprobe nvidia_modeset nvidia_uvm nvidia_drm
        sudo modprobe nvidia_drm nvidia
        sudo cp /mnt/arch/beallitas/etc/X11/xorg.conf.d/20-nvidia.conf /etc/X11/xorg.conf.d/
        startx;;
    2) echo "ok intel" 
        sudo rmmod nvidia_modeset nvidia_uvm nvidia_drm nvidia
        sudo rmmod nvidia_modeset nvidia
        sudo rm -rf /etc/X11/xorg.conf.d/20-nvidia.conf
        startx;;
    *) echo "Ez nem tudom Ã©rtelmezni!"; exit 2 ;;
esac
