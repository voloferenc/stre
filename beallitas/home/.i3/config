## Manual management of external displays
# Set the shortcuts and what they do
bindsym Ctrl+$mod+h mode "$mode_display"
set $mode_display Ext Screen (r) HDMI RIGHT, (h) HDMI ONLY, (l) eDP LEFT, (o) HDMI OFF
mode "$mode_display" {
	# HDMI left
	bindsym l exec xrandr --output eDP-1-1 --auto --output HDMI-0 --auto --left-of eDP-1-1 && echo "HDMI left" > ~/.i3/script/hdmi && nitrogen --restore && notify-send -t 5 HDMI:left
	#bindsym r exec --no-startup-id xrandr --output eDP-1-1 --auto --right-of HDMI-0, mode "default" 

	# HDMI right
	bindsym r exec xrandr --output eDP-1-1 --auto --output HDMI-0 --auto --right-of eDP-1-1 && echo "HDMI right" > ~/.i3/script/hdmi && nitrogen --restore && notify-send -t 5 HDMI:right

	# hdmi only
	bindsym h exec xrandr --output eDP-1-1 --off && echo "HDMI on" > ~/.i3/script/hdmi && nitrogen --restore && notify-send -t 5 HDMI:on

	# hdmi off
	bindsym o exec xrandr --output HDMI-0 --off && echo "HDMI off" > ~/.i3/script/hdmi && nitrogen --restore && notify-send -t 5 HDMI:off

	# exit system mode: "Enter" or "Escape"
	bindsym Return mode "default"
	bindsym Escape mode "default"
}

