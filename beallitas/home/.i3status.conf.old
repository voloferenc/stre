general {
                    colors = true
                    interval = 5
}

order += "cpu_usage"
order += "disk /"
order += "disk /home"
order += "battery 0"
order += "ethernet enp0s25"
order += "wireless wlo1"
order += "wireless wlo2"
order += "volume master"
order += "time"


ethernet enp0s25 {
            format_up = "lan: %ip %speed"
            format_down = " no lan "
}

wireless wlo1 {
            format_up = " 0 (%quality at %essid, %bitrate)"
            format_down = "  0 off "
}

wireless wlo2 {
            format_up = " 1 (%quality at %essid, %bitrate)"
            format_down = ""
}

battery 0 {
            format = "%status%percentage %remaining"
            format_down = ""
            last_full_capacity = true
            integer_battery_capacity = true
            low_threshold = 33
            threshold_type = percentage
            hide_seconds = true
            status_chr = " CHR"
            status_bat = " BAT"
            status_full = "☻ FULL"
            path = "/sys/class/power_supply/BAT0/uevent"
}

volume master {
            format = " %volume"
            format_muted = " %volume"
            device = "default"
            mixer = "Master"
            mixer_idx = 0
}

time {
            format = "%m.%d %H:%M"
}

disk "/" {
            format = "⛁ %avail"
}

disk "/home" {
            format = "⛁ %avail"
}
