# Set shut down, restart and locking features
bindsym Ctrl+$mod+x mode "$mode_system"
set $mode_system (l)ock, (e)xit, switch_(u)ser, (s)uspend, (h)ibernate, (r)eboot, (x)shutdown
mode "$mode_system" {
        bindsym l exec --no-startup-id ~/.config/i3/script/i3exit lock, mode "default"
        bindsym s exec --no-startup-id ~/.config/i3/script/i3exit suspend, mode "default"
        bindsym u exec --no-startup-id ~/.config/i3/script/i3exit switch_user, mode "default"
        bindsym e exec --no-startup-id ~/.config/i3/script/i3exit logout, mode "default"
        bindsym h exec --no-startup-id ~/.config/i3/script/i3exit hibernate, mode "default"
        bindsym r exec --no-startup-id ~/.config/i3/script/i3exit reboot, mode "default"
        bindsym x exec --no-startup-id ~/.config/i3/script/i3exit shutdown, mode "default"
        bindsym y exec --no-startup-id killall synergy && ~/.config/i3/script.config/i3exit shutdown, mode "default"

# exit system mode: "Enter" or "Escape"
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

