## Manual management of external displays
# Set the shortcuts and what they do
bindsym Ctrl+$mod+h mode "$mode_display"
set $mode_display Ext Screen (r) HDMI RIGHT, (h) HDMI ONLY, (l) eDP LEFT, (o) HDMI OFF
mode "$mode_display" {
	# HDMI left
#	bindsym l exec xrandr --output eDP-1-1 --auto --output HDMI-0 --auto --left-of eDP-1-1 && echo "HDMI left" > ~/.config/i3/script/hdmi && nitrogen --restore && notify-send -t 5 HDMI:left
	#bindsym r exec --no-startup-id xrandr --output eDP-1-1 --auto --right-of HDMI-0, mode "default" 
    bindsym l exec --no-startup-id autorandr --load left

	# HDMI right
#	bindsym r exec xrandr --output eDP-1-1 --auto --output HDMI-0 --auto --right-of eDP-1-1 && echo "HDMI right" > ~/.config/i3/script/hdmi && nitrogen --restore && notify-send -t 5 HDMI:right
    bindsym r exec autorandr --load right

	# hdmi only
#	bindsym h exec xrandr --output eDP-1-1 --off && echo "HDMI on" > ~/.config/i3/script/hdmi && nitrogen --restore && ~/.config/i3/script/./DPIincrease.sh && notify-send -t 5 HDMI:on
    bindsym h exec autorandr --load lg

	# hdmi off
#	bindsym o exec xrandr --output HDMI-0 --off && echo "HDMI off" > ~/.config/i3/script/hdmi && nitrogen --restore && ~/.config/i3/script/./DPIdecrease.sh && notify-send -t 5 HDMI:off 
    bindsym o exec autorandr --load l5

	# exit system mode: "Enter" or "Escape"
	bindsym Return mode "default"
	bindsym Escape mode "default"
}

